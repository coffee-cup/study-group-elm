{
  "plugins": ["es6-recommended"],
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "comma-dangle": [0, "error"],
    "no-console": 0,
    "no-unused-vars": [
      1,
      {
        "vars": "local",
        "args": "after-used"
      }
    ],
    "no-new": 0,
    "no-undef": 2,
    "semi": [2, "always"]
  }
}
